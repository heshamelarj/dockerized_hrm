<div class="modal fade  " id="validateAutorisationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="modal-content w-100">
            <div class="modal-header">
                <h5 class="modal-title uppercase text-center" id="exampleModalLongTitle">Demande Autorisation de Quitter le
                    Territoire National</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body flex">
                {{ form_start(form) }}

                <div class="doti m-2 p-2 ">

                    {{ form_row(form.user, {  'label_attr' : {'class' : 'pb-2 text-gray-800 w-25 mr-4'},'attr' : {'class' :'appearance-none p-1 text-gray-800 border-b-2 border-blue-500 disabled',}}) }}
                </div>
                <div class="nature m-2 p-2">

                    {{ form_row(form.isExceptional, {'label_attr' : {'class' : 'p-1 text-gray-800 '},'attr': {'class': 'p-1 border-2 border-blue-400 ml-4 ', 'disabled':'true'}}) }}


                </div>
                <div class="granted m-2 p-2">

                    {{ form_row(form.granted, {'label_attr' : {'class' : 'p-1 text-gray-800 '},'attr': {'class': 'p-1 border-2 border-blue-400 ml-4 ' }}) }}


                </div>
                <div class="type m-2 p-2">

                    {{ form_row(form.type, {'label_attr' : {'class' : 'pb-1 text-gray-800'},'attr': {'class': 'p-1 border-2 border-blue-400 ml-4 appearance-none w-50' }}) }}

                </div>

                <div class="motif m-2 p-2">

                    {{ form_row(form.motif, {'label_attr' : {'class' : 'pb-1 text-gray-800  w-25'},'attr': {'class': 'p-1 border-2 border-blue-400 ml-4 appearance-none' }}) }}

                </div>
                <div class="detail m-2 p-2">

                    {{ form_row(form.detail, {'label_attr' : {'class' : 'pb-1 text-gray-800  w-25'},'attr': {'class': 'p-1 border-2 border-blue-400 ml-4 appearance-none' }}) }}

                </div>
                <div class="date-one m-2 p-2">
                    {#<label for="" class="p-2 text-gray-600">Date Depart </label>#}
                    {{ form_row(form.date_debut, {'label_attr' : {'class' : 'pb-1 text-gray-800  w-25'},'attr': {'class': 'p-1 border-2 border-blue-500 w-50 ml-4 appearance-none'}}) }}
                </div>
                <div class="date-two m-2 p-2">
                    {#<label for="" class="p-2 text-gray-600">Date Arriv√©e </label>#}
                    {{ form_row(form.date_fin, {'label_attr' : {'class' : 'pb-1 text-gray-800  w-25'},'attr': {'class': 'p-1 border-2 border-blue-500 w-50 ml-4 appearance-none'}}) }}
                </div>
                <div class="modal-footer">
                    {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    {{ form_row(form.cancel, {'attr': {'class': 'taskbtn btn-secondary_field'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>