<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" >
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    {{ encore_entry_link_tags('main') }}
    {{ encore_entry_link_tags('fa-css') }}
    {{ encore_entry_link_tags('bootstrap4css') }}
    {% endblock %}
</head>

<body class="app" style="height:100vh">
    {% block navbar %}
    <div class="col-12">
        {% include 'includes/navbar.html.twig' %}
    </div>
    {% endblock %}
    <div class="row">
            <div class="col-2">
        {% block sidebar %}

        {% endblock %}
            </div>
        <div class="col-9 justify-content-center align-self-center   border border-gray-500">
            <div class="flash-messages col-8 h-25 mt-lg-5">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <p>

                            {{ message }}
                        </p>
                    </div>
                {% endfor %}
            </div>
            {% block body %}

            {% endblock %}
        </div>
    </div>

    {% block javascripts %}
    {{ encore_entry_script_tags('bootstrap4js') }}
    {{ encore_entry_script_tags('fa-js') }}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>

</html>
