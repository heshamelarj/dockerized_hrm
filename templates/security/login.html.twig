{% extends 'base.html.twig' %}
{% block title %} Se connecter {% endblock %}
{% block body %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="h-screen flex justify-center  items-center ">
    <div class="login-c-card  shadow-2xl border-2 border-blue-700 p-20">
        
    <h4 class="text-blue-500 ">Se connecter</h4>
    <div class=" ">
        <form action="{{ path('login') }}" method="post">
            <div class="p-2">
                <label for="cin" class="">CIN</label>
                <div class="">
                    <input type="text" id="cin" class="p-2 border-2 border-blue-300 bg-white" name="_username" placeholder="CIN" value={{ last_username }}>
                </div>
            </div>
            <div class="p-2">
                <label for="password" class="">Mot de pass</label>
                <div class="">
                    <input type="password" class="p-2 border-2 border-blue-300 bg-white" id="password" name="_password" placeholder="Mot de pass" />
                </div>
            </div>
            <div class="p-2">
                <div class="">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">
                            Me garder connect√©
                        </label>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="">
                <div class="">
                    <button type="submit" class=" p-2 rounded-lg bg-indigo-500 text-white hover:text-indigo-500 hover:bg-gray-800 w-full">Se connecter</button>
                </div>
            </div>
        </form>
    </div>
    </div>
</div>
{% endblock %}
