{% extends 'base.html.twig' %}
{% block title %} Se inscrire {% endblock %}
{% block body %}

    {% if is_granted("ROLE_ADMIN")  %}
    <div class="card">
    <h3 class="border-b-2 border-blue-300 card-title p-4 text-primary">S'inscrire</h3>
    <div class="card-body">
        {{ form_start(form) }}

        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-title text-blue-500 p-2">1</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.cin) }}

                                {{ form_row(form.som) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.poste_budgetaire) }}
                                {{ form_row(form.date_recrutement) }}
                            </div>
                        </div>


                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-title text-blue-500  p-2">2</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.email) }}

                                {{ form_row(form.password) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.telephone) }}
                                {{ form_row(form.fax) }}
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        </div>
            <div class="row mt-2">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-title text-blue-500 p-2">3</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.nom) }}

                                    {{ form_row(form.prenom_1) }}
                                    {{ form_row(form.prenom_2) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.date_naissance) }}
                                    {{ form_row(form.lieu_naissance) }}
                                    {{ form_row(form.adresse) }}
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-title text-blue-500  p-2">4</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.nom_ar) }}

                                    {{ form_row(form.prenom_ar1) }}
                                    {{ form_row(form.prenom_ar2) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.lieu_naissance_ar) }}
                                    {{ form_row(form.adresse_ar) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col">
                    {{ form_row(form.valider) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
    {% endif %}
{% endblock %}
